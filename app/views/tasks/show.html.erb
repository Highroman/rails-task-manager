<h2><%= @task.title %></h2>
<div><%= @task.details %></div>
<% if @task.completed == true %>
  <div>Task completed</div>
<% else %>
  <div>Task not completed yet</div>
<% end %>
<%= link_to 'edit task', edit_path(@task) %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
